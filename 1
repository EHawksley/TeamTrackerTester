    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: auto;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px 0;
        }

        .tracker {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
            max-width: 400px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .tracker-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .controls {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .tracker-item span {
            font-size: 18px;
            flex: 1;
            text-align: left;
        }

        .arrow {
            font-size: 24px;
            cursor: pointer;
            background: none;
            border: none;
            outline: none;
        }

        .arrow.up {
            color: green;
        }

        .arrow.down {
            color: red;
        }

        input[type="number"] {
            width: 50px;
            text-align: center;
            font-size: 16px;
        }

        button {
            padding: 12px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
